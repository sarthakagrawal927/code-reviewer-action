{
  "name": "code-reviewer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "build:types": "npm run -w packages/shared-types build",
    "build:review-core": "npm run -w packages/review-core build",
    "build:gateway": "npm run -w packages/ai-gateway-client build",
    "build:worker-api": "npm run -w workers/api build",
    "build:worker-review": "npm run -w workers/review build",
    "build:workers": "npm run build:worker-api && npm run build:worker-review",
    "build:packages": "npm run build:types && npm run build:review-core && npm run build:gateway",
    "build": "npm run build:packages && ncc build src/main.ts -o dist",
    "build:v1-skeleton": "npm run build:types && npm run build:workers",
    "test": "npm run build:packages && node --test tests/*.test.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.9.3"
  }
}
